{
  "appId": "com.definitiondetective.app",
  "appName": "Definition Detective",
  "webDir": "out",
  "bundledWebRuntime": false,
  "server": {
    "androidScheme": "https"
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 2000,
      "backgroundColor": "#673AB7",
      "showSpinner": false
    },
    "StatusBar": {
      "style": "dark",
      "backgroundColor": "#673AB7"
    },
    "Keyboard": {
      "resize": "body",
      "style": "dark"
    }
  }
}
