/**
 * @file Firestore Security Rules for Definition Detective
 * @version Prototyping
 *
 * @Core Philosophy:
 * This ruleset enforces a strict user-ownership model for user profiles and game sessions,
 * allowing users to only access their own data. Leaderboard entries are publicly readable,
 * but can only be created by authenticated users.
 *
 * @Data Structure:
 * - /userProfiles/{userProfileId}: Stores user profile information.
 * - /userProfiles/{userProfileId}/gameSessions/{gameSessionId}: Stores game session data for a specific user.
 * - /leaderboardEntries/{leaderboardEntryId}: Stores leaderboard entries, publicly readable.
 *
 * @Key Security Decisions:
 * - User profiles and game sessions are strictly owned by the user identified in the path.
 * - Leaderboard entries are publicly readable but require authentication to create, update or delete.
 * - Data validation is minimal during this prototyping phase, focusing on relational integrity and
 *   ownership constraints only.
 *
 * @Denormalization for Authorization:
 *  None needed for this specific structure.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Secure user profile data, accessible only to the user.
     * @path /userProfiles/{userProfileId}
     * @allow (create) - User with ID 'user123' creates their profile.
     *    request.auth.uid == 'user123' && request.resource.data.id == 'user123'
     * @allow (get) - User with ID 'user123' reads their profile.
     *    request.auth.uid == 'user123'
     * @allow (update) - User with ID 'user123' updates their profile.
     *    request.auth.uid == 'user123' && resource.data.id == 'user123'
     * @allow (delete) - User with ID 'user123' deletes their profile.
     *    request.auth.uid == 'user123' && resource.data.id == 'user123'
     * @deny (create) - User with ID 'user456' attempts to create profile for 'user123'.
     *    request.auth.uid == 'user456' && request.resource.data.id == 'user123'
     * @principle Enforces document ownership for writes.
     */
    match /userProfiles/{userProfileId} {
      // Read Permissions
      allow get: if isSignedIn() && isOwner(userProfileId);
      allow list: if false;

      // Write Permissions
      allow create: if isSignedIn() && isOwner(userProfileId) && request.resource.data.id == request.auth.uid;
      allow update: if isSignedIn() && isExistingOwner(userProfileId) && (request.resource.data.id == resource.data.id);
      allow delete: if isSignedIn() && isExistingOwner(userProfileId);
    }

    /**
     * @description Secure game session data, accessible only to the owning user.
     * @path /userProfiles/{userProfileId}/gameSessions/{gameSessionId}
     * @allow (create) - User 'user123' creates a game session under their profile.
     *    request.auth.uid == 'user123' && request.resource.data.userProfileId == 'user123'
     * @allow (get) - User 'user123' reads a game session under their profile.
     *    request.auth.uid == 'user123'
     * @allow (update) - User 'user123' updates a game session under their profile.
     *    request.auth.uid == 'user123' && resource.data.userProfileId == 'user123'
     * @allow (delete) - User 'user123' deletes a game session under their profile.
     *    request.auth.uid == 'user123' && resource.data.userProfileId == 'user123'
     * @deny (create) - User 'user456' attempts to create a game session for 'user123'.
     *    request.auth.uid == 'user456' && request.resource.data.userProfileId == 'user123'
     * @principle Enforces document ownership and relational integrity for game sessions.
     */
    match /userProfiles/{userProfileId}/gameSessions/{gameSessionId} {
      // Read Permissions
      allow get: if isSignedIn() && isOwner(userProfileId);
      allow list: if isSignedIn() && isOwner(userProfileId);

      // Write Permissions
      allow create: if isSignedIn() && isOwner(userProfileId) && request.resource.data.userProfileId == userProfileId;
      allow update: if isSignedIn() && isExistingOwner(userProfileId) && (request.resource.data.userProfileId == resource.data.userProfileId);
      allow delete: if isSignedIn() && isExistingOwner(userProfileId);
    }

    /**
     * @description Leaderboard entries are publicly readable, but only authenticated users can create, update or delete them.
     * @path /leaderboardEntries/{leaderboardEntryId}
     * @allow (get) - Any user can read a leaderboard entry.
     * @allow (list) - Any user can list leaderboard entries.
     * @allow (create) - Authenticated user creates a leaderboard entry.
     *    request.auth != null
     * @deny (delete) - Unauthenticated user attempts to delete a leaderboard entry.
     *    request.auth == null
     * @principle Allows public reads while restricting writes to authenticated users.
     */
    match /leaderboardEntries/{leaderboardEntryId} {
      // Read Permissions
      allow get: if true;
      allow list: if true;

      // Write Permissions
      allow create: if isSignedIn();
      allow update: if isSignedIn() && false; // Leaderboard entries are immutable after creation
      allow delete: if isSignedIn() && false; // Leaderboard entries cannot be deleted after creation
    }

    // =========================================================================
    // Helper Functions
    // =========================================================================

    /**
     * @description Checks if the user is signed in.
     * @return {boolean} True if the user is signed in, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the requesting user is the owner of the resource.
     * @param {string} userId - The user ID to check against.
     * @return {boolean} True if the requesting user is the owner, false otherwise.
     */
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    /**
     * @description Checks if the requesting user is the owner of the resource and the resource exists.
     * @param {string} userId - The user ID to check against.
     * @return {boolean} True if the requesting user is the owner and the resource exists, false otherwise.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }
  }
}